html
  -webkit-font-smoothing: antialiased

body,
html
  margin: 0
  padding: 0
  line-height: 1.1em
  font-family: Arial, "Bitstream Vera sans", FreeSans, sans-serif

nav.top-bar
  border-bottom: 1px solid #DDD
  width: 100%
  background-color: #FFF
  box-shadow: 1px 1px 5px #999
  height: 45px

nav.top-bar img
  float: left
  width: 180px
  /* height 25px */
  padding: 5px 0 5px
  left: 15px

nav.top-bar ul
  float: right
  list-style: none
  margin: 0
  padding: 0
  margin-top: 15px

nav.top-bar ul li
  display: inline
  color: #5f6f81
  font-size: 12px
  font-weight: bold
  padding: 0 10px

#wrapper
  margin: 80px auto
  overflow: auto

div.clear
  clear: both

#logo
  height: 50px
  width: 50px

.logo-big
  height: 150px
  width: 150px
  margin: 0px auto
  display: block

#title
  border-bottom: 4px solid


#notes-live
  width: 100%
  position: relative

.meta
  width: 32%
  float: right
  text-align: left

.meta h1
  font-size: 16px
  border-bottom: 1px solid #DDD
  margin-top: 0

.meta ul
  list-style: none
  margin: 0
  padding: 0
  font-size: 13px
  width: 90%

.meta li
  padding: 3px

.yellow-box
  width: 90%
  margin-bottom: 20px
  background-color: #F6F7C1 !important
  border: 1px solid #EDE788 !important
  border-radius: 5px
  color: #2b2b2b
  font-size: 12px

.yellow-box p
  padding: 0 8px

#recent-notes,
.sidebar-message
  width: 90%


div.clear + div.entry
  margin-top: 10px

div.stream,
div.anonymous,
div.file,
div.name
  padding: 2px 5px

div.language
  float: right

div.language label
  font-size: 14px !important
  float: none !important

div.entryless > div > div,
div.entry > div > div
  margin: 2px 5px

div.entryless > div

div.name input
  width: 99%

div.stream input
  width: 99%

div.entry input:focus
  background-color: #FFF !important

div.note > div
  margin: 2px 10px !important

div.entry textarea
  width: 99%
  height: 300px
  font-family: Consolas, Monaco, "Bitstream Vera sans Mono", monospace
  font-size: 15px
  background-color: #FFF
  color: #000 !important
  padding: 0

div.submit
  position: relative
  margin: 5px auto
  color: #444
  font-size: 15px

div.submit-options
  float: right

span.submit-options-private
  margin-right: 20px

input.submit
  margin-left: 40px

div.anonymous label
  display: inline
  width: inherit !important

div.anonymous input
  width: inherit
  margin: 0
  margin-left: 5px

h1
  color: #444
  line-height: 1.1em
  font-family: 'Open Sans', sans-serif

.unlink,
.link,
a
  color: #5f6f81
  font-weight: bold
  cursor: pointer
  text-decoration: none

.unlink
  text-decoration: none
  cursor: inherit

.link:hover,
a:hover
  text-decoration: none

div.add-row
  margin: 0 auto
  margin-top: 5px
  border-radius: 5px
  display: block
  border: 1px solid #DDD
  font-size: 14px

div.add-row a
  display: block
  padding: 10px 8px 8px 35px
  background: 10px no-repeat url('/static/img/icons/page_add.png') #FFF

div.add-row a:hover
  text-decoration: none

div.add-row a:hover
  box-shadow: 1px 1px 5px #999

div.delete-row
  display: block
  text-align: right
  font-size: 12px
  padding: 5px 10px 5px 5px

a.delete-row
  color: #A60000

span.header
  font-size: 18px
  color: #333

div.entry label
  color: #444

div.entryless label
  font-size: 12px
  float: left
  width: 80px
  color: #444

div.small
  font-size: 12px

.alert
  color: #A63E45

span.author
  font-weight: bold

time,
.date
  color: #999

span.name
  color: #666

li.active
  background-color: #D2E9FF
  border-radius: 5px

.light
  color: #555

form p
  padding: 0 5px

form ul
  list-style: none

div.search-submit
  clear: both

.tiny
  font-size: 10px

.center
  text-align: center

.gray
  color: #666

.default-input
  color: #999 !important

.hidden
  display: none

.right
  text-align: right

.float-right
  float: right

h2.pages
  margin: 0
  padding: 0
  font-size: 13px
  color: #666

