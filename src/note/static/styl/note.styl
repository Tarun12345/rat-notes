#sortable
  list-style: none
  margin: 0
  padding: 0

#sortable > li
  cursor: grab
  cursor: -moz-grab
  cursor: -webkit-grab

#sortable > li.ui-sortable-helper
  cursor: grabbing
  cursor: -moz-grabbing
  cursor: -webkit-grabbing

#sortable li.ui-sortable-helper > div
  border-top: 1px solid #CCC
  border-radius: 5px
  box-shadow: 8px 8px 8px #777
  background-color: #E0E0E0

div.entry-header
  border-bottom: 1px solid #DDD !important

.note-list
  font-size: 12px
  width: 90%

.note-list .notes
  height: 265px
  overflow: auto

.note-list > div:nth-child(odd)
  margin-bottom: 5px
  border-bottom: 1px solid #FFF

.note-list > div:last-child
  border-bottom: 0
  margin-bottom: 0

h1.lead
  font-size : 2.6em

div.entryless,
div.entry
  position: relative
  margin: 0 auto
  background-color: #FFF

div.entry
  margin-top: 10px

div.entryless
  padding: 5px 0 3px 0
  + ul > li:first-child > div.entry
    margin-top: 0
    + div.entry
      margin-top: 5px


/* typicons */
[class*="typicons-"]:before {
  font-family: 'Typicons', sans-serif;
}
